<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/TopLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="@string/vita_title_1"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gray_baseline" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/TopLinearLayout"
        android:background="@color/white"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/vita_tv_null"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2.1"
                android:gravity="center"
                android:text="@string/vita_time"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/vita_bp"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2.1"
                android:gravity="center"
                android:text="@string/vita_pulse"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:text="@string/vita_respiration"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gray_baseline2" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            tools:ignore="RtlHardcoded" >

            <TextView
                android:id="@+id/vita_item_0_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_time_hint"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/vita_item_0_bp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:gravity="center"
                android:hint="@string/vita_bp_hint"
                android:inputType="number"
                android:maxLength="5"
                android:nextFocusDown="@+id/vita_item_0_pulse"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/vita_item_0_pulse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_pulse_hint"
                android:inputType="number"
                android:maxLength="3"
                android:nextFocusDown="@+id/vita_item_0_respiration"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="Deprecated" />

            <EditText
                android:id="@+id/vita_item_0_respiration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_respiration_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gray_baseline2" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            tools:ignore="RtlHardcoded" >

            <TextView
                android:id="@+id/vita_item_1_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_time_hint"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/vita_item_1_bp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:gravity="center"
                android:hint="@string/vita_bp_hint"
                android:inputType="number"
                android:maxLength="5"
                android:nextFocusDown="@+id/vita_item_1_pulse"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/vita_item_1_pulse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_pulse_hint"
                android:inputType="number"
                android:maxLength="3"
                android:nextFocusDown="@+id/vita_item_1_respiration"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/vita_item_1_respiration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_respiration_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gray_baseline2" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            tools:ignore="RtlHardcoded" >

            <TextView
                android:id="@+id/vita_item_2_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_time_hint"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/vita_item_2_bp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:gravity="center"
                android:hint="@string/vita_bp_hint"
                android:inputType="number"
                android:maxLength="5"
                android:nextFocusDown="@+id/vita_item_2_pulse"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/vita_item_2_pulse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_pulse_hint"
                android:inputType="number"
                android:maxLength="3"
                android:nextFocusDown="@+id/vita_item_2_respiration"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/vita_item_2_respiration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:gravity="center"
                android:hint="@string/vita_respiration_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gray_baseline2" />
    </LinearLayout>

</RelativeLayout>