<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/TopLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="@string/vita_title_3"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gray_baseline" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/TopLinearLayout"
        android:background="@color/white"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            tools:ignore="RtlHardcoded" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:gravity="center"
                android:text="@string/vita_gcs"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/vita_evm"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/gray_baseline2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="76.5dp"
                android:layout_marginTop="6sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UselessParent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8" />

                <Button
                    android:id="@+id/vita_item_0_e"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_e"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />

                <Button
                    android:id="@+id/vita_item_0_v"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_v"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />

                <Button
                    android:id="@+id/vita_item_0_m"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_m"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent" >

                <Spinner
                    android:id="@+id/vita_item_0_gcs"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_weight="2.8"
                    android:spinnerMode="dialog"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/gray_baseline2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="76.5dp"
                android:layout_marginTop="6sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UselessParent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8" />

                <Button
                    android:id="@+id/vita_item_1_e"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_e"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />

                <Button
                    android:id="@+id/vita_item_1_v"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_v"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />

                <Button
                    android:id="@+id/vita_item_1_m"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_m"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent" >

                <Spinner
                    android:id="@+id/vita_item_1_gcs"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_weight="2.8"
                    android:spinnerMode="dialog"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/gray_baseline2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="76.5dp"
                android:layout_marginTop="6sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UselessParent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8" />

                <Button
                    android:id="@+id/vita_item_2_e"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_e"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />

                <Button
                    android:id="@+id/vita_item_2_v"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_v"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />

                <Button
                    android:id="@+id/vita_item_2_m"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="3"
                    android:background="@drawable/item_background_square"
                    android:text="@string/gcs_m"
                    android:textColor="@color/black"
                    tools:ignore="RtlHardcoded,HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent" >

                <Spinner
                    android:id="@+id/vita_item_2_gcs"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_weight="2.8"
                    android:spinnerMode="dialog"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gray_baseline2" />
    </LinearLayout>

</RelativeLayout>